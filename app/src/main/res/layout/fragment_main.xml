<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:background="#eeeeee">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:background="@drawable/layout_bg"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView9"
                        android:src="@drawable/user" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="90dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="6"
                            android:id="@+id/textView18"
                            android:gravity="fill_vertical|center_horizontal"
                            android:textStyle="bold"
                            android:textSize="80dp" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Total Usuarios Registrados"
                            android:id="@+id/textView17"
                            android:gravity="center" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:background="@drawable/layout_bg2"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView10"
                        android:src="@drawable/steering" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="90dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="12"
                            android:id="@+id/textView19"
                            android:gravity="fill_vertical|center_horizontal"
                            android:textStyle="bold"
                            android:textSize="80dp" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Total Choferes Registrados"
                            android:id="@+id/textView20"
                            android:gravity="center" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:background="@drawable/layout_bg3"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView11"
                        android:src="@drawable/service" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="90dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="7"
                            android:id="@+id/textView21"
                            android:gravity="fill_vertical|center_horizontal"
                            android:textStyle="bold"
                            android:textSize="80dp" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Total Servicios Solicitados"
                            android:id="@+id/textView22"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:background="@drawable/layout_bg4"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView12"
                        android:src="@drawable/company"
                        android:layout_marginLeft="5dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="90dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="10"
                            android:id="@+id/textView23"
                            android:gravity="fill_vertical|center_horizontal"
                            android:textStyle="bold"
                            android:textSize="80dp" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Total de Empresas Registradas"
                            android:id="@+id/textView24"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
