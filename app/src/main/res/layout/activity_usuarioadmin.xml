<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:background="#eeeeee">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="100dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="305dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Bienvenido/a"
                        android:id="@+id/textView4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Usuario Administrativo"
                        android:id="@+id/Nombre" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/layout_bg3"
                    android:layout_marginTop="5dp"
                    android:onClick="Lista">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="fill_parent"
                            android:id="@+id/imageView11"
                            android:src="@drawable/service" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="90dp"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="3"
                                android:id="@+id/textView21"
                                android:gravity="fill_vertical|center_horizontal"
                                android:textStyle="bold"
                                android:textSize="80dp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Servicios Pendientes"
                                android:id="@+id/textView22"
                                android:gravity="center" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="175dp"
                        android:layout_height="240dp"
                        android:background="@drawable/layout_bg"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="4.5dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="100dp"
                                android:id="@+id/imageView9"
                                android:src="@drawable/steering" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="90dp"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="2"
                                    android:id="@+id/textView18"
                                    android:gravity="fill_vertical|center_horizontal"
                                    android:textStyle="bold"
                                    android:textSize="80dp" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Choferes Activos"
                                    android:id="@+id/textView17"
                                    android:gravity="center" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="175dp"
                        android:layout_height="240dp"
                        android:background="@drawable/layout_bg2"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="4.5dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="100dp"
                                android:id="@+id/imageView10"
                                android:src="@drawable/truck" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="90dp"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="2"
                                    android:id="@+id/textView19"
                                    android:gravity="fill_vertical|center_horizontal"
                                    android:textStyle="bold"
                                    android:textSize="80dp" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="Gruas Activas"
                                    android:id="@+id/textView20"
                                    android:gravity="center" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
